<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.booking.StatusDialogFragment">

    <TextView
        android:id="@+id/tv_accepted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Accepted >"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/worksans_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_inprogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="InProgress >"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/worksans_semibold"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_accepted"/>

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete >"
        android:textColor="@color/black"
        android:padding="@dimen/_5sdp"
        android:fontFamily="@font/worksans_semibold"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_inprogress"/>

    <TextView
        android:id="@+id/tv_cancelled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelled >"
        android:visibility="gone"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/worksans_semibold"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_complete"/>

</androidx.constraintlayout.widget.ConstraintLayout>